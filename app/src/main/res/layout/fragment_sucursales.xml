<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.sucursales.SucursalesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--    Codigo Caja 1-->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sucursales"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/imgP1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:src="@drawable/sucursales1" />

            <TextView
                android:id="@+id/tvNameP1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nos encontramos ubicados en las principales ciudades del pais, te invitamos a mirar nuestros showroom y conocer mas de la marca."
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="16sp"/>
            <org.osmdroid.views.MapView
                android:id="@+id/openmapview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

            <GridView
                android:id="@+id/gridSucursales"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="1" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>